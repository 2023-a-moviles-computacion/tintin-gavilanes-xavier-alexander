<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHelado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCodigoHeladeria"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Codigo"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvHelado"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Helado"
                android:padding="5dp" />


            <TextView
                android:id="@+id/tvPrecioHelado"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Precio Helado"
                android:padding="5dp" />
            <TextView
                android:id="@+id/tvDescripcionP"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Descripcion Planeta"
                android:padding="5dp" />



            <Button
                android:id="@+id/btnBorrarP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrar"
                android:layout_gravity="right"
                android:padding="5dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>